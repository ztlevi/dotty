#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  # https://aider.chat/docs/install.html
  curl -LsSf https://aider.chat/install.sh | sh
}

# update() {}

link() {
  mklink $DOTTY_CONFIG_HOME/misc/ai/config/aider.conf.yml ~/.aider.conf.yml
}

clean() {
  rm -f ~/.aider.conf.yml
}

init "$@"
