#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  # Deploy rust if not yet deployed
  ! topic-enabled-p dev/node && dotty dev/node

  npm install -g cspell
}

# update() {}

link() {
  rm -f $XDG_CONFIG_HOME/.cspell.json
  rm -rf $XDG_CONFIG_HOME/cspell
  mklink $DOTTY_CONFIG_HOME/misc/cspell/.cspell-dict $HOME/
  mklink $DOTTY_CONFIG_HOME/misc/cspell/.cspell.json $HOME/
}

clean() {
  npm uninstall -g cspell
}

init "$@"
