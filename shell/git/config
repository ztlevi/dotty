[user]
	name = Ting Zhou
	email = ztlevi.work@gmail.com
	signingkey = ztlevi.work@gmail.com
[alias]
	# Show the diff between the latest commit and the current state
	d	= !"git diff"
	# `git di $number` shows the diff between the state `$number` revisions ago and the current state
	di	= !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"
	aa = add --all
	rr = rm -r --cached .
	rv = remote -v
    smu = submodule update --remote --merge
	cm	= commit
	ca = commit -a -v
	ps = push
	pl = pull
	prco = pr checkout
	cl	= clone
    clr = clone --recurse-submodules -j8
	br	= branch
	bv = branch -vv
	ba = branch -ra
	bd = branch -d
	st	= status -sb
	co	= checkout
	sm	= submodule
	unst = reset HEAD
	throw	= reset --hard HEAD
	throwh	= reset --hard HEAD^
	clf	= clean -fdx -f
	last	= log -1
	glog	= log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	slog	= log --pretty=oneline
	accept-ours = "!f() { git checkout --ours -- \"${@:-.}\"; git add -u \"${@:-.}\"; }; f"
	accept-theirs = "!f() { git checkout --theirs -- \"${@:-.}\"; git add -u \"${@:-.}\"; }; f"
	tagcommit = !sh -c 'git rev-list $0 | head -n 1'
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)%an <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[core]
	editor = nvim
	ignorecase = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
[pull]
	rebase = true
[push]
	default = matching
[branch]
	autosetuprebase = always
[credential "https://dev.azure.com"]
	useHttpPath = true
# Require git-remote-codecommit and aws cli installed
[credential "https://git-codecommit.*.amazonaws.com"]
    helper = !aws codecommit credential-helper $@
    UseHttpPath = true
[credential]
	helper = /usr/local/bin/git-credential-manager-core
[http]
	sslVerify = true
[color]
	ui = auto
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[github]
	user = ztlevi
[magithub]
	cache = always
	online = false
[magithub "status"]
	includeStatusHeader = false
