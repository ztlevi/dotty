#!/usr/bin/env zsh

if ! _is_callable dunst; then
  exit 0
fi

kill -9 $(pgrep dunst) >/dev/null || kill -9 $(pgrep notify-osd) >/dev/null || echo "no process tied with notify-send."

if [ "$GDK_SCALE" -eq 2 ]; then
  dunst -config $DOTTY_HOME/desktop/bspwm/config/dunst/dunstrc_4K &
else
  dunst -config $DOTTY_HOME/desktop/bspwm/config/dunst/dunstrc &
fi
