#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  brew install nvm

  # NPM Packages
  npm install -g npm pnpm typescript typescript-language-server
}

update() {
  brew upgrade nvm
  npm update -g
}

link() {
  mklink $DOTTY_CONFIG_HOME/dev/node/.* ~/
}

clean() {
  for f in $(echo $DOTTY_CONFIG_HOME/dev/node/.*); do
    rm -f ~/${f##*/}
  done
  rm -rf $HOME/.nvm
}

init "$@"
