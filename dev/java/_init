#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  brew install gradle maven jenv openjdk@21
  # Note: JAVA_HOME is reset by jenv, use jenv to set global and local
  eval "$(jenv init -)"
  jenv add $(brew --prefix openjdk@21)
  jenv global 21
}

# update() {}

# link() {}

clean() {
  rm -f $XDG_CACHE_HOME/${SHELL##*/}/jenv
}

init "$@"
